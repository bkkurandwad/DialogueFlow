<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_3"
    tools:context=".Eregdetails">

    <TextView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/etw"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:text="ENTER EMP DETAILS"
        />


    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/etw"
        android:hint="ENTER ID"
        android:id="@+id/eet1"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:hint="ENTER NAME"
        android:layout_below="@+id/eet1"
        android:id="@+id/eet2"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:hint="ENTER DEPT"
        android:layout_below="@+id/eet2"
        android:id="@+id/eet3"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/eet3"
        android:hint="ENTER PH NUMBER"
        android:id="@+id/eet4"
        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/eet4"
        android:hint="ENTER ADDRESS"
        android:id="@+id/eet5"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/eet5"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="SUBMIT"
        />

</RelativeLayout>